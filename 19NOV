//Caso 2 Usuario.java
public class Usuario
{
    String nombre;
    String email;
    int edad;
    
    public Usuario(String n, String e, int ed){
        nombre = n;
        email = e;
        edad = ed;
    }
	public static void main(String[] args) {
	Usuario myObj1 = new Usuario ("Juan", "juanreina07@gmail.com", 21);
	Usuario myObj2 = new Usuario ("Milher", "milhersan65@gmail.com", 18);
	Usuario myObj3 = new Usuario ("Yeison", "yes.navarrete7@gmail.com", 19);
	
	System.out.println("Usuario N.1 > " + myObj1.nombre + " - " + myObj1.email + " - " + myObj1.edad);
	System.out.println("Usuario N.2 > " + myObj2.nombre + " - " + myObj2.email + " - " + myObj2.edad);
	System.out.println("Usuario N.3 > " + myObj3.nombre + " - " + myObj3.email + " - " + myObj3.edad);
	}
}

