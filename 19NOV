//CONSTRUCTORES

public class Producto {
    
    int x;
    String nombre;

    public Producto() {
        nombre = "Hello";
    }

    public static void main(String[] args) {
        Producto myObj = new Producto();
        Producto myObj1 = new Producto();
        System.out.println(myObj.x);
        System.out.println(myObj1.nombre);
    }
}

