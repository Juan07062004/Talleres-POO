//8. PasswordManager.java
class PasswordManager {
    // 1. Variable privada para guardar el PIN
    private String pinDeAcceso;

    // 2. Implementación de la Propiedad PinDeAcceso con bloque SET, sin bloque GET
    // NOTA: Se omite el getPinDeAcceso() para hacerlo Write-Only [cite: 62]
    
    public void setPinDeAcceso(String nuevoPin) {
        // Lógica de seguridad o cifrado (aquí simple asignación)
        this.pinDeAcceso = nuevoPin;
        System.out.println("PIN de acceso guardado (solo escritura)");
    }
}

// Main.java
public class Main {
    public static void main(String[] args) {
        PasswordManager safe = new PasswordManager();
        safe.setPinDeAcceso("1234"); // Asigna un PIN [cite: 63]
        
        // Opcional: demostrar que intentar leerla da error
        // String pin = safe.getPinDeAcceso(); // <--- Esto generaría error de compilación
    }
}
