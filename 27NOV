//9. Empleado.java
class Empleado {
    // Variable privada y final para inmutabilidad después de la asignación inicial
    private final String id; // `final` en Java asegura que solo se asigna una vez

    // 2. Constructor que asigne el valor inicial
    public Empleado(String idInicial) {
        this.id = idInicial; // Asignación inicial en el constructor [cite: 69]
    }
    
    // 1. Propiedad ID configurada con GET público
    public String getId() { 
        return id; 
    }
    
    // NOTA: No se provee setID(), ya que no puede ser modificado [cite: 66, 68]
}

// Main.java
public class Main {
    public static void main(String[] args) {
        // Asignación de ID en la creación del objeto
        Empleado emp = new Empleado("EMP-001"); 
        
        System.out.println("ID del Empleado: " + emp.getId()); // Salida: EMP-001
        
        // Intento de cambiar el ID (asignación prohibida) [cite: 70]
        // emp.setId("EMP-002"); // <--- Esto generaría un error de compilación
    }
}
//--------------------------------------------------------------------------------------
//10. Registro.java
class Registro {
    // 1. Variable privada de respaldo
    private String correoCorporativo;

    public String getCorreoCorporativo() { return correoCorporativo; }
    
    // 2. Bloque SET que utilice .contains() para validar
    public void setCorreoCorporativo(String nuevoCorreo) {
        // Utiliza el método contains() para validar el formato [cite: 76]
        if (nuevoCorreo != null && nuevoCorreo.contains("@")) { 
            this.correoCorporativo = nuevoCorreo;
            System.out.println("Correo asignado correctamente.");
        } else {
            // Rechaza el cambio e imprime "Formato inválido" [cite: 73]
            System.out.println("Formato inválido. El correo debe contener '@'.");
        }
    }
}

// Main.java
public class Main {
    public static void main(String[] args) {
        Registro reg = new Registro();
        
        reg.setCorreoCorporativo("user@empresa.com");
        System.out.println("Correo actual: " + reg.getCorreoCorporativo());
        
        // Prueba con correo inválido [cite: 77]
        reg.setCorreoCorporativo("usuario.com"); 
        System.out.println("Correo después de intento inválido: " + reg.getCorreoCorporativo()); // Salida: user@empresa.com (El valor anterior se mantiene)
    }
}
