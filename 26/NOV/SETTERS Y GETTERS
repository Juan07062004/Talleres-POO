//2. Empleado.java

public class Empleado {

    // Atributos privados
    private String nombre;
    private int edad;
    private String jornadaEstudio; // <-- NUEVO ATRIBUTO

    /**
     * Constructor para inicializar un empleado.
     */
    public Empleado(String nombre, int edadInicial, String jornadaInicial) {
        setNombre(nombre); // Usa el setter para validar que no sea nulo/vac√≠o
        setEdad(edadInicial);
        setJornadaEstudio(jornadaInicial); // <-- Usa el nuevo setter con validaci√≥n
    }

    // --- Getters ---
    
    public String getNombre() {
        return nombre;
    }

    public int getEdad() {
        return edad;
    }
    
    public String getJornadaEstudio() { // <-- NUEVO GETTER
        return jornadaEstudio;
    }

    // --- Setters con Reglas de Negocio ---
    
    // Setter para Nombre (Validaci√≥n b√°sica)
    public void setNombre(String nuevoNombre) {
        if (nuevoNombre != null && !nuevoNombre.trim().isEmpty()) {
            this.nombre = nuevoNombre.trim();
        } else {
            this.nombre = "Sin Nombre";
            System.out.println("Advertencia: El nombre no puede estar vac√≠o. Se asign√≥ 'Sin Nombre'.");
        }
    }

    // Setter para Edad (Validaci√≥n 18 a 65)
    public void setEdad(int nuevaEdad) {
        if (nuevaEdad >= 18 && nuevaEdad <= 65) {
            this.edad = nuevaEdad;
            // System.out.println("Edad asignada correctamente: " + nuevaEdad); // Comentado para no saturar
        } else {
            this.edad = 0; // Se fuerza a 0 si es inv√°lido
            System.out.println("Error de edad: Edad no permitida para trabajar (" + nuevaEdad + ").");
        }
    }
    
    // Setter para Jornada de Estudio (Validaci√≥n Diurno o Nocturno)
    public void setJornadaEstudio(String nuevaJornada) {
        String jornadaNormalizada = nuevaJornada != null ? nuevaJornada.trim().toLowerCase() : "";
        
        if (jornadaNormalizada.equals("diurno") || jornadaNormalizada.equals("nocturno")) {
            // Se guarda con may√∫scula inicial para uniformidad
            this.jornadaEstudio = Character.toUpperCase(jornadaNormalizada.charAt(0)) + jornadaNormalizada.substring(1);
            // System.out.println("Jornada asignada: " + this.jornadaEstudio); // Comentado para no saturar
        } else {
            this.jornadaEstudio = "Indefinida";
            System.out.println("Error de jornada: Solo se acepta 'Diurno' o 'Nocturno'. Se asign√≥ 'Indefinida'.");
        }
    }
    
    @Override
    public String toString() {
        String infoEdad = (edad == 0) ? "No V√°lida" : String.valueOf(edad);
        return String.format("Empleado [Nombre: %s, Edad: %s, Jornada: %s]",
                             nombre, infoEdad, jornadaEstudio);
    }
}

//Main.java
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("--- Registro de Nuevo Empleado ---");
        
        // 1. Solicitar Nombre
        System.out.print("Ingrese el nombre del empleado: ");
        String nombre = scanner.nextLine();
        
        // 2. Solicitar y Validar Edad (Debe ser num√©rica y entre 18 y 65)
        int edad = 0;
        boolean edadValida = false;
        
        while (!edadValida) {
            System.out.print("Ingrese la edad (entre 18 y 65): ");
            if (scanner.hasNextInt()) {
                int inputEdad = scanner.nextInt();
                scanner.nextLine(); // Consumir la nueva l√≠nea
                
                // Aplicar la regla de negocio directamente
                if (inputEdad >= 18 && inputEdad <= 65) {
                    edad = inputEdad;
                    edadValida = true;
                } else {
                    System.out.println("Error de edad: La edad debe estar entre 18 y 65 a√±os. Intente de nuevo.");
                }
            } else {
                System.out.println("Error: Por favor, ingrese un valor num√©rico para la edad.");
                scanner.nextLine(); // Consumir la entrada inv√°lida
            }
        }
        
        // 3. Solicitar y Validar Jornada (Solo 'Diurno' o 'Nocturno')
        String jornada = "";
        boolean jornadaValida = false;
        
        while (!jornadaValida) {
            System.out.print("Ingrese la jornada de estudio (Diurno/Nocturno): ");
            jornada = scanner.nextLine().trim();
            String jornadaNormalizada = jornada.toLowerCase();
            
            if (jornadaNormalizada.equals("diurno") || jornadaNormalizada.equals("nocturno")) {
                jornadaValida = true;
            } else {
                System.out.println("Error de jornada: Solo se aceptan 'Diurno' o 'Nocturno'. Intente de nuevo.");
            }
        }
        
        // 4. Crear el objeto Empleado con los datos validados
        // Nota: Las validaciones en los setters del objeto solo se activar√°n si
        // los datos ya validados por el main son incorrectos (lo cual no deber√≠a pasar aqu√≠)
        Empleado empleado = new Empleado(nombre, edad, jornada);
        
        System.out.println("\n=================================================");
        System.out.println("üéâ Registro Exitoso. Datos del Empleado:");
        System.out.println(empleado.toString());
        
        // --- Ejemplo de Prueba de Validaci√≥n (Opcional, fuera del flujo principal) ---
        System.out.println("\n--- Prueba de Correcci√≥n Manual (setEdad) ---");
        empleado.setEdad(70); // Esto fallar√° internamente
        System.out.println(empleado.toString()); 
        
        scanner.close();
    }
}
//----------------------------------------------------------------------------------------------------------
//3. Producto.java
public class Producto {
    // 1. Atributos privados
    // 'codigoBarras' ser√° inmutable (Read-Only)
    private String codigoBarras;
    
    // 'precio' ser√° mutable (Read/Write)
    private double precio;

    // 2. Constructor: √önica forma de inicializar 'codigoBarras'
    public Producto(String codigoBarras, double precioInicial) {
        this.codigoBarras = codigoBarras;
        this.precio = precioInicial;
        System.out.println("Producto creado con C√≥digo de Barras: " + this.codigoBarras);
    }

    // 3. Getter para 'codigoBarras'
    // Permite leer el valor, pero no modificarlo.
    public String getCodigoBarras() {
        return codigoBarras;
    }

    // IMPORTANTE: NO se crea un m√©todo setCodigoBarras() 
    // Esto asegura que, una vez asignado en el constructor, 
    // el c√≥digo de barras NUNCA se pueda cambiar.

    // 4. Getter para 'precio'
    public double getPrecio() {
        return precio;
    }

    // 5. Setter para 'precio'
    // Permite modificar el valor del precio.
    public void setPrecio(double nuevoPrecio) {
        if (nuevoPrecio >= 0) {
            this.precio = nuevoPrecio;
            System.out.println("Precio actualizado a: $" + nuevoPrecio);
        } else {
            System.out.println("ERROR: El precio no puede ser negativo.");
        }
    }

    // M√©todo de utilidad para mostrar datos
    public void mostrarDatos() {
        System.out.println("\n--- Datos del Producto ---");
        System.out.println("C√≥digo de Barras: " + this.codigoBarras);
        System.out.println("Precio: $" + this.precio);
        System.out.println("--------------------------");
    }
}

//Main.java
public class Main {
    public static void main(String[] args) {
        System.out.println("--- PRUEBA DE PRODUCTO INMUTABLE ---");

        // 1. Crear una instancia del producto
        Producto miJabon = new Producto("7501000100251", 15.50);
        miJabon.mostrarDatos();

        // 2. MODIFICAR el precio (Permitido)
        System.out.println("\n*** Intentando cambiar el precio ***");
        miJabon.setPrecio(18.99);
        miJabon.mostrarDatos();

        // 3. INTENTAR MODIFICAR el c√≥digo de barras (Imposible)
        System.out.println("\n*** Intentando cambiar el c√≥digo de barras ***");
        
        // El siguiente c√≥digo provocar√≠a un ERROR DE COMPILACI√ìN 
        // (o al menos un warning, dependiendo del IDE), ya que NO existe el m√©todo setCodigoBarras().
        //
        // miJabon.setCodigoBarras("9999999999999"); 
        //
        // La √∫nica forma de cambiar el c√≥digo de barras ser√≠a modificarlo 
        // directamente en la clase 'Producto', violando la encapsulaci√≥n 
        // (por ejemplo, haciendo 'codigoBarras' p√∫blico) o re-instanciando el objeto.
        
        System.out.println("Comentario: No se puede cambiar el c√≥digo de barras porque la clase 'Producto'");
        System.out.println("NO expone un m√©todo 'setCodigoBarras()'. Este atributo es de solo lectura (Read-Only).");

        // 4. Verificaci√≥n final: El c√≥digo de barras sigue siendo el original
        System.out.println("\nC√≥digo de barras final (inmutable): " + miJabon.getCodigoBarras());
    }
}
