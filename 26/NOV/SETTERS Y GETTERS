//Termometro.java
public class Termometro {
    //Almacena la temperatura.
    private double temperaturaCelsius;

    //Metodo que establece la temperatura interna del termÃ³metro.
     
    public void setTemperatura(double temp) {
        this.temperaturaCelsius = temp;
        System.out.println("Temperatura interna establecida en " + temp + "Â°C.");
    }

    //Devuelve la temperatura actual convertida a grados Fahrenheit.
    public double getTemperaturaFahrenheit() {
        
        // FÃ³rmula de conversiÃ³n: (C * 1.8) + 32
        double temperaturaFahrenheit = (this.temperaturaCelsius * 1.8) + 32;
        return temperaturaFahrenheit;
    }
}

//Main.java
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        //Leer la entrada del usuario
        Scanner scanner = new Scanner(System.in);
        
        //Pedir al usuario que ingrese la temperatura
        System.out.print("Por favor, ingrese la temperatura en grados Celsius: ");
        
        double tempCelsius = scanner.nextDouble();
        
        // Cerrar el scanner
        scanner.close(); 
        
        //Crear una instancia de la clase Termometro
        Termometro miTermometro = new Termometro();

        System.out.println("\n-> Asignando una temperatura de " + tempCelsius + "Â°C...");
        miTermometro.setTemperatura(tempCelsius);//Asignar la temperatura ingresada al termÃ³metro

        //Imprimir la lectura en Fahrenheit.
        double lecturaFahrenheit = miTermometro.getTemperaturaFahrenheit();

        System.out.println("\n--- Lectura Final ---");
        System.out.println("\u001B[31mLectura para el usuario (en Fahrenheit): \u001B[0m" + lecturaFahrenheit + "Â°F");
    }
}
