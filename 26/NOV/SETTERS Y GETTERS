//5. Usuario.java
public class Usuario {
    // 1. Atributos privados
    private String username;
    private String password; // ¬°Este atributo es sensible y no tendr√° getter!

    // 2. Constructor (Opcional, pero √∫til)
    public Usuario(String username, String password) {
        this.username = username;
        setPassword(password); // Usamos el setter para establecer la contrase√±a
    }

    // 3. Getter y Setter para 'username' (Normales)
    public String getUsername() {
        return username;
    }

    public void setUsername(String username) {
        this.username = username;
    }

    // 4. Setter para 'password'
    // Permite definir la contrase√±a inicial o cambiarla.
    public void setPassword(String pass) {
        // En una aplicaci√≥n real, aqu√≠ se usar√≠a un algoritmo de hashing (ej. bcrypt)
        // para guardar la contrase√±a de forma segura, no el texto plano.
        this.password = pass; 
        System.out.println("Contrase√±a para el usuario '" + this.username + "' establecida (NO guardada de forma segura en este ejemplo).");
    }

    // 5. M√©todo de Verificaci√≥n (Reemplaza al Getter)
    // Compara el intento del usuario con la contrase√±a almacenada.
    public boolean verificarPassword(String intento) {
        // Usamos .equals() para la comparaci√≥n de cadenas
        return this.password.equals(intento);
    }
    
    // no se crea un m√©todo getPassword()
    // Esto previene que cualquier otra parte del c√≥digo pueda leer la contrase√±a almacenada.
}

//Main.java
public class Main {
    public static void main(String[] args) {
        System.out.println("--- SIMULACI√ìN DE SISTEMA DE LOGIN ---");

        // 1. Crear una instancia de Usuario (Registro/Creaci√≥n de Cuenta)
        // Estableciendo el nombre de usuario y la contrase√±a inicial.
        Usuario user1 = new Usuario("admin", "claveSecreta123");
        System.out.println("\nUsuario creado: " + user1.getUsername());

        // 2. Intentar un inicio de sesi√≥n con una clave INCORRECTA
        System.out.println("\n*** Intento de Login 1: Clave Incorrecta ***");
        String intentoIncorrecto = "otraClave";
        
        if (user1.verificarPassword(intentoIncorrecto)) {
            System.out.println("Login Exitoso.");
        } else {
            System.out.println("Login Fallido: Contrase√±a incorrecta.");
        }

        // 3. Intentar un inicio de sesi√≥n con la clave CORRECTA
        System.out.println("\n*** Intento de Login 2: Clave Correcta ***");
        String intentoCorrecto = "claveSecreta123";
        
        if (user1.verificarPassword(intentoCorrecto)) {
            System.out.println("Login Exitoso. ¬°Bienvenido!");
        } else {
            System.out.println("Login Fallido: Contrase√±a incorrecta.");
        }
    }
}
