//Empleado.java
/**
 * Clase Empleado que encapsula nombre, edad y jornada de estudio,
 * aplicando reglas de negocio a edad y jornada.
 */
public class Empleado {

    // Atributos privados
    private String nombre;
    private int edad;
    private String jornadaEstudio; // <-- NUEVO ATRIBUTO

    /**
     * Constructor para inicializar un empleado.
     */
    public Empleado(String nombre, int edadInicial, String jornadaInicial) {
        setNombre(nombre); // Usa el setter para validar que no sea nulo/vacÃ­o
        setEdad(edadInicial);
        setJornadaEstudio(jornadaInicial); // <-- Usa el nuevo setter con validaciÃ³n
    }

    // --- Getters ---
    
    public String getNombre() {
        return nombre;
    }

    public int getEdad() {
        return edad;
    }
    
    public String getJornadaEstudio() { // <-- NUEVO GETTER
        return jornadaEstudio;
    }

    // --- Setters con Reglas de Negocio ---
    
    // Setter para Nombre (ValidaciÃ³n bÃ¡sica)
    public void setNombre(String nuevoNombre) {
        if (nuevoNombre != null && !nuevoNombre.trim().isEmpty()) {
            this.nombre = nuevoNombre.trim();
        } else {
            this.nombre = "Sin Nombre";
            System.out.println("âš ï¸ Advertencia: El nombre no puede estar vacÃ­o. Se asignÃ³ 'Sin Nombre'.");
        }
    }

    // Setter para Edad (ValidaciÃ³n 18 a 65)
    public void setEdad(int nuevaEdad) {
        if (nuevaEdad >= 18 && nuevaEdad <= 65) {
            this.edad = nuevaEdad;
            // System.out.println("âœ… Edad asignada correctamente: " + nuevaEdad); // Comentado para no saturar
        } else {
            this.edad = 0; // Se fuerza a 0 si es invÃ¡lido
            System.out.println("â›” Error de edad: Edad no permitida para trabajar (" + nuevaEdad + ").");
        }
    }
    
    // Setter para Jornada de Estudio (ValidaciÃ³n Diurno o Nocturno)
    public void setJornadaEstudio(String nuevaJornada) {
        String jornadaNormalizada = nuevaJornada != null ? nuevaJornada.trim().toLowerCase() : "";
        
        if (jornadaNormalizada.equals("diurno") || jornadaNormalizada.equals("nocturno")) {
            // Se guarda con mayÃºscula inicial para uniformidad
            this.jornadaEstudio = Character.toUpperCase(jornadaNormalizada.charAt(0)) + jornadaNormalizada.substring(1);
            // System.out.println("âœ… Jornada asignada: " + this.jornadaEstudio); // Comentado para no saturar
        } else {
            this.jornadaEstudio = "Indefinida";
            System.out.println("â›” Error de jornada: Solo se acepta 'Diurno' o 'Nocturno'. Se asignÃ³ 'Indefinida'.");
        }
    }
    
    @Override
    public String toString() {
        String infoEdad = (edad == 0) ? "No VÃ¡lida" : String.valueOf(edad);
        return String.format("Empleado [Nombre: %s, Edad: %s, Jornada: %s]",
                             nombre, infoEdad, jornadaEstudio);
    }
}

//Main.java
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("--- ðŸ“ Registro de Nuevo Empleado ---");
        
        // 1. Solicitar Nombre
        System.out.print("Ingrese el nombre del empleado: ");
        String nombre = scanner.nextLine();
        
        // 2. Solicitar y Validar Edad (Debe ser numÃ©rica y entre 18 y 65)
        int edad = 0;
        boolean edadValida = false;
        
        while (!edadValida) {
            System.out.print("Ingrese la edad (entre 18 y 65): ");
            if (scanner.hasNextInt()) {
                int inputEdad = scanner.nextInt();
                scanner.nextLine(); // Consumir la nueva lÃ­nea
                
                // Aplicar la regla de negocio directamente
                if (inputEdad >= 18 && inputEdad <= 65) {
                    edad = inputEdad;
                    edadValida = true;
                } else {
                    System.out.println("â›” Error de edad: La edad debe estar entre 18 y 65 aÃ±os. Intente de nuevo.");
                }
            } else {
                System.out.println("âŒ Error: Por favor, ingrese un valor numÃ©rico para la edad.");
                scanner.nextLine(); // Consumir la entrada invÃ¡lida
            }
        }
        
        // 3. Solicitar y Validar Jornada (Solo 'Diurno' o 'Nocturno')
        String jornada = "";
        boolean jornadaValida = false;
        
        while (!jornadaValida) {
            System.out.print("Ingrese la jornada de estudio (Diurno/Nocturno): ");
            jornada = scanner.nextLine().trim();
            String jornadaNormalizada = jornada.toLowerCase();
            
            if (jornadaNormalizada.equals("diurno") || jornadaNormalizada.equals("nocturno")) {
                jornadaValida = true;
            } else {
                System.out.println("â›” Error de jornada: Solo se aceptan 'Diurno' o 'Nocturno'. Intente de nuevo.");
            }
        }
        
        // 4. Crear el objeto Empleado con los datos validados
        // Nota: Las validaciones en los setters del objeto solo se activarÃ¡n si
        // los datos ya validados por el main son incorrectos (lo cual no deberÃ­a pasar aquÃ­)
        Empleado empleado = new Empleado(nombre, edad, jornada);
        
        System.out.println("\n=================================================");
        System.out.println("ðŸŽ‰ Registro Exitoso. Datos del Empleado:");
        System.out.println(empleado.toString());
        
        // --- Ejemplo de Prueba de ValidaciÃ³n (Opcional, fuera del flujo principal) ---
        System.out.println("\n--- Prueba de CorrecciÃ³n Manual (setEdad) ---");
        empleado.setEdad(70); // Esto fallarÃ¡ internamente
        System.out.println(empleado.toString()); 
        
        scanner.close();
    }
}
