//SETTER Y GETTERS

// Persona.java
public class Persona {
  private String nombre; 

  // Getter
  public String getNombre() {
    return nombre;
  }

  // Setter
  public void setNombre(String newNombre) {
    this.nombre = newNombre;
    
  }
}

//Main.java
public class Main{
    
    public static void main(String[] args){
        
        Persona p = new Persona(); //Objeto
        p.setNombre("Juank"); //Agregar el valor con SET
        System.out.println(p.getNombre()); //Imprime el valor mediante el GET
    }
}
//------------------------------------------------------------------------
//1. CuentaBancaria
public class CuentaBancaria {

    //Atributos privados
    private String numeroCuenta;
    private double saldo;
    private String nombreTitular;

    /**
     * Constructor para inicializar una CuentaBancaria.
     * @param numeroCuenta El n√∫mero de la cuenta (9 d√≠gitos).
     * @param saldoInicial El saldo inicial (se valida que no sea negativo).
     * @param titular El nombre del titular de la cuenta.
     */
    public CuentaBancaria(String numeroCuenta, double saldoInicial, String titular) { // <-- CONSTRUCTOR ACTUALIZADO
        this.numeroCuenta = numeroCuenta;
        this.nombreTitular = titular; // Asignaci√≥n directa del titular
        setSaldo(saldoInicial); // SET para validar el saldo inicial
    }

    // --- M√©todos de Acceso (Getters) ---

    public String getNumeroCuenta() {
        return numeroCuenta;
    }
    
    public double getSaldo() {
        return saldo;
    }

    // Getter para el nombre del Titular
    public String getNombreTitular() { // <-- NUEVO GETTER
        return nombreTitular;
    }

    // --- M√©todos de Modificaci√≥n (Setter con Validaci√≥n) ---
    
    public void setSaldo(double cantidad) {
        if (cantidad < 0) {
            System.out.println("Saldo inv√°lido. La cantidad no puede ser negativa.");
        } else {
            this.saldo = cantidad;
        }
    }
    
    public String toString() {
        // Formato mejorado para mostrar el titular
        return "Titular: " + nombreTitular + " | Cuenta: #" + numeroCuenta + " | Saldo: $" + String.format("%.2f", saldo);
    }
}

//Main.java
import java.util.Scanner;

public class Main {
    
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        // Creamos un arreglo para almacenar 3 objetos CuentaBancaria
        CuentaBancaria[] cuentas = new CuentaBancaria[3]; 
        
        System.out.println("--- Creaci√≥n de Cuentas Bancarias (3 Cuentas) ---");
        
        // --- SECCI√ìN DE CREACI√ìN DE CUENTAS (SE SOLICITA EL TITULAR AQU√ç) ---
        for (int i = 0; i < cuentas.length; i++) {
            System.out.println("\n--- Datos para la Cuenta " + (i + 1) + " ---");
            
            // 1. Solicitar Nombre del Titular
            System.out.print("Ingrese el nombre del titular: ");
            String titular = scanner.nextLine(); // <-- NUEVA SOLICITUD
            
            // 2. Solicitar y validar N√∫mero de Cuenta (9 d√≠gitos exactos)
            String numCuenta;
            do {
                System.out.print("Ingrese el n√∫mero de cuenta (9 d√≠gitos): ");
                numCuenta = scanner.nextLine();
                if (numCuenta.length() != 9) {
                    System.out.println("Error: El n√∫mero de cuenta debe tener exactamente 9 d√≠gitos. Intente de nuevo.");
                }
            } while (numCuenta.length() != 9);

            // 3. Solicitar y validar Saldo Inicial (que sea un valor num√©rico)
            double saldoInicial = 0.0;
            boolean entradaValida = false;
            
            while (!entradaValida) {
                System.out.print("Ingrese el saldo inicial: $");
                if (scanner.hasNextDouble()) {
                    saldoInicial = scanner.nextDouble();
                    scanner.nextLine(); 
                    entradaValida = true;
                } else {
                    System.out.println("Error: Por favor, ingrese un valor num√©rico v√°lido para el saldo.");
                    scanner.nextLine(); 
                }
            }
            
            // 4. Crear la cuenta (con el nombre del titular)
            cuentas[i] = new CuentaBancaria(numCuenta, saldoInicial, titular); // <-- CONSTRUCTOR USADO
            
            // Mensaje de √©xito o advertencia
            if (cuentas[i].getSaldo() == saldoInicial && saldoInicial >= 0) {
                System.out.println("Cuenta " + numCuenta + " creada con √©xito.");
            } else if (saldoInicial < 0) {
                System.out.println("Cuenta " + numCuenta + " creada. Saldo inicial inv√°lido, establecido a $0.00.");
            }
        }
        
        System.out.println("\n=================================================");
        System.out.println("--- Selecci√≥n y Visualizaci√≥n de Cuenta ---");
        
        // --- SECCI√ìN DE SELECCI√ìN POR √çNDICE (sin cambios) ---
        
        System.out.println("\nCuentas Habilitadas:");
        for (int i = 0; i < cuentas.length; i++) {
            // Mostramos el √≠ndice (i + 1) y el n√∫mero de cuenta
            System.out.println((i + 1) + ". Cuenta #" + cuentas[i].getNumeroCuenta());
        }
        
        int seleccion = -1;
        boolean seleccionValida = false;
        
        while (!seleccionValida) {
            System.out.print("\nDigite el n√∫mero (1, 2 o 3) de la cuenta que desea ver: ");
            
            if (scanner.hasNextInt()) {
                seleccion = scanner.nextInt();
                if (seleccion >= 1 && seleccion <= cuentas.length) {
                    seleccionValida = true;
                } else {
                    System.out.println("Error: Por favor, digite un n√∫mero entre 1 y " + cuentas.length + ".");
                }
            } else {
                System.out.println("Error: Por favor, ingrese un valor num√©rico.");
                scanner.next(); 
            }
        }
        
        // --- MODIFICACI√ìN: Solicitar el nombre del titular antes de mostrar los detalles ---
        
        // Consumir la nueva l√≠nea pendiente despu√©s de la entrada de la selecci√≥n (nextInt)
        scanner.nextLine(); 
        
        System.out.print("Ingrese el nombre del titular de la cuenta seleccionada (" + seleccion + "): ");
        String titularIngresado = scanner.nextLine();
        
        // Obtener la cuenta seleccionada
        CuentaBancaria cuentaSeleccionada = cuentas[seleccion - 1];
        
        // 4. Verificaci√≥n y Muestra de Saldo
        
        if (cuentaSeleccionada.getNombreTitular().equalsIgnoreCase(titularIngresado)) {
            System.out.println("\nAcceso Exitoso. Detalles de la Cuenta:");
            // El m√©todo toString() ahora muestra el titular, n√∫mero y saldo
            System.out.println(cuentaSeleccionada); 
            
        } else {
            System.out.println("\nError de Acceso: El nombre del titular ingresado no coincide con el registrado para la cuenta #" + cuentaSeleccionada.getNumeroCuenta());
        }
        
        scanner.close();
    }
}
